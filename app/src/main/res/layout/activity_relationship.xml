        app:layout_constraintEnd_toEndOf="@id/ivR6"
        app:layout_constraintStart_toStartOf="@id/ivR6"
        app:layout_constraintTop_toTopOf="@id/ivR6"
        app:layout_constraintWidth_percent="0.2" />

    <ImageView
        android:id="@+id/ivR7"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/swords_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivR5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <ImageView
        android:id="@+id/ivR7b"
        android:layout_width="105dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/card_back_small"
