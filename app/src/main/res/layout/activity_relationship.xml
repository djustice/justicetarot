        app:layout_constraintEnd_toEndOf="@id/ivR3"
        app:layout_constraintStart_toStartOf="@id/ivR3"
        app:layout_constraintTop_toTopOf="@id/ivR3"
        app:layout_constraintWidth_percent="0.2" />

    <ImageView
        android:id="@+id/ivR4"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/swords_01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ivR5"
        app:layout_constraintStart_toEndOf="@+id/ivR2"
        app:layout_constraintTop_toTopOf="parent"
