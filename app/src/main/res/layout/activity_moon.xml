<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".spread.Moon">

    <ImageView
        android:id="@+id/ivM1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/swords_01"
        app:layout_constraintBottom_toTopOf="@id/ivM5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivM2"
        app:layout_constraintTop_toBottomOf="@id/spaceTop"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM1b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/card_back_small"
        app:layout_constraintBottom_toBottomOf="@id/ivM1"
        app:layout_constraintLeft_toLeftOf="@id/ivM1"
        app:layout_constraintRight_toRightOf="@id/ivM1"
        app:layout_constraintTop_toTopOf="@id/ivM1"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/swords_01"
        app:layout_constraintBottom_toTopOf="@id/ivM5"
        app:layout_constraintLeft_toRightOf="@id/ivM1"
        app:layout_constraintRight_toLeftOf="@id/ivM3"
        app:layout_constraintTop_toBottomOf="@id/spaceTop"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM2b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/card_back_small"
        app:layout_constraintBottom_toBottomOf="@id/ivM2"
        app:layout_constraintLeft_toLeftOf="@id/ivM2"
        app:layout_constraintRight_toRightOf="@id/ivM2"
        app:layout_constraintTop_toTopOf="@id/ivM2"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/swords_01"
        app:layout_constraintBottom_toTopOf="@id/ivM5"
        app:layout_constraintLeft_toRightOf="@id/ivM2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceTop"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM3b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/card_back_small"
        app:layout_constraintBottom_toBottomOf="@id/ivM3"
        app:layout_constraintLeft_toLeftOf="@id/ivM3"
        app:layout_constraintRight_toRightOf="@id/ivM3"
        app:layout_constraintTop_toTopOf="@id/ivM3"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/swords_01"
        app:layout_constraintBottom_toTopOf="@id/spaceBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ivM5"
        app:layout_constraintTop_toBottomOf="@id/ivM2"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM4b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/card_back_small"
        app:layout_constraintBottom_toBottomOf="@id/ivM4"
        app:layout_constraintLeft_toLeftOf="@id/ivM4"
        app:layout_constraintRight_toRightOf="@id/ivM4"
        app:layout_constraintTop_toTopOf="@id/ivM4"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/swords_01"
        app:layout_constraintBottom_toTopOf="@id/spaceBottom"
        app:layout_constraintLeft_toRightOf="@id/ivM4"
        app:layout_constraintRight_toLeftOf="@id/ivM6"
        app:layout_constraintTop_toBottomOf="@id/ivM2"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM5b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/card_back_small"
        app:layout_constraintBottom_toBottomOf="@id/ivM5"
        app:layout_constraintLeft_toLeftOf="@id/ivM5"
        app:layout_constraintRight_toRightOf="@id/ivM5"
        app:layout_constraintTop_toTopOf="@id/ivM5"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/swords_01"
        app:layout_constraintBottom_toTopOf="@id/spaceBottom"
        app:layout_constraintLeft_toRightOf="@id/ivM5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivM2"
        app:layout_constraintWidth_percent="0.3" />

    <ImageView
        android:id="@+id/ivM6b"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/card_back_small"
        app:layout_constraintBottom_toBottomOf="@id/ivM6"
        app:layout_constraintLeft_toLeftOf="@id/ivM6"
        app:layout_constraintRight_toRightOf="@id/ivM6"
        app:layout_constraintTop_toTopOf="@id/ivM6"
        app:layout_constraintWidth_percent="0.3" />

    <Space
        android:id="@+id/spaceTop"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@id/ivM2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/spaceBottom"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivM5" />
</androidx.constraintlayout.widget.ConstraintLayout>