<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:foregroundGravity="center_vertical"
    tools:context=".reference.DRSwordsActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foregroundGravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/DRs01Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_01"
                    android:contentDescription="@string/swords_01"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/DRs02Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_02"
                    android:contentDescription="@string/swords_02"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/DRs03Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_03"
                    android:contentDescription="@string/swords_03"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/DRs04Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_04"
                    android:contentDescription="@string/swords_04"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/DRs05Button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_05"
                    android:contentDescription="@string/swords_05" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvS1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ace"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/peace"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sorrow"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/truce"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/defeat"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/DRs06Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_06"
                    android:contentDescription="@string/swords_06"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/DRs07Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_07"
                    android:contentDescription="@string/swords_07"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/DRs08Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_08"
                    android:contentDescription="@string/swords_08"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/DRs09Button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_09"
                    android:contentDescription="@string/swords_09" />

                <Button
                    android:id="@+id/DRs10Button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_10"
                    android:contentDescription="@string/swords_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvS6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/science"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/futility"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS8"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/interference"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cruelty"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ruin"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/DRs11Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_princess"
                    android:contentDescription="@string/swords_princess"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/DRs12Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_prince"
                    android:contentDescription="@string/swords_prince"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/DRs13Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_queen"
                    android:contentDescription="@string/swords_queen"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/DRs14Button"
                    android:layout_width="100dp"
                    android:layout_height="160dp"
                    android:background="@drawable/swords_knight"
                    android:contentDescription="@string/swords_knight"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvS11"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/princess"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS12"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/prince"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS13"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/queen"
                    android:textAlignment="center"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvS14"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/knight"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>